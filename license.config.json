{
  "ignoreFile": ".gitignore",
  "license": "LICENSE",
  "trailingWhitespace": "TRIM",
  "defaultFormat": {
    "prepend": "/*",
    "append": "*/\n"
  },
  "licenseFormats": {
    "gitignore|npmignore|eslintignore|dockerignore|^Dockerfile|sh|py|graphql|^Vagrantfile|yaml|yml": {
      "eachLine": {
        "prepend": "# "
      },
      "append": "\n"
    },
    "html|xml|svg": {
      "prepend": "<!--",
      "append": "-->\n"
    },
    "js|ts|css|scss|less|php|as|c|java|cpp|go|cto|acl": {
      "prepend": "/*",
      "eachLine": {
        "prepend": " * "
      },
      "append": " */\n"
    },
    "tex|bib|eps": {
      "eachLine": {
        "prepend": "% "
      },
      "append": ""
    },
    "txt": {}
  },
  "ignore": [
    "**/build",
    "**/coverage",
    "**/mode_modules",
    ".github",
    ".husky",
    ".vscode",
    "**/*.md",
    "**/.editorconfig",
    "**/.gitattributes",
    "**/.gitignore",
    "**/.lintstagedrc",
    "**/.markdownlint.json",
    "**/.markdownlintignore",
    "**/.prettierignore",
    "**/.prettierrc",
    "**/.shellcheckrc",
    "**/cspell.json"
  ]
}
