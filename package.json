    "email": "carlo.corradini98@gmail.com",
    "url": "https://www.linkedin.com/in/carlo-corradini"
  },
  "scripts": {
    "build": "latexmk -interaction=nonstopmode -file-line-error -pdf -halt-on-error -outdir=build main",
    "check": "npx npm-run-all --npm-path npm check:*",
    "check:format": "npx prettier --check .",
    "check:markdown": "npx markdownlint \"**/*.md\"",
    "check:spell": "npx cspell lint --config cspell.json --no-progress --show-context \"**\"",
    "clean": "npx shx rm -rf ./build ./corradini_carlo_computer_science_2022_2023.pdf",
    "fix": "npx npm-run-all --npm-path npm fix:*",
    "fix:format": "npx prettier --write .",
    "fix:markdown": "npx markdownlint --fix \"**/*.md\"",
    "postbuild": "npx shx cp ./build/main.pdf ./corradini_carlo_computer_science_2022_2023.pdf",
    "prebuild": "npm run clean"
  },
  "devDependencies": {
    "@cspell/dict-en_us": "^4.3.0",
    "@cspell/dict-latex": "^3.1.0",
    "@cspell/dict-markdown": "^2.0.1",
    "@cspell/dict-npm": "^5.0.3",
    "cspell": "^6.27.0",
    "markdownlint": "^0.27.0",
    "markdownlint-cli": "^0.33.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "prettier-plugin-latex": "^1.2.4",
    "shx": "^0.3.4"
  }
}
